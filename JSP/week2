<!-- addrGet.html -->
	<form action = "Address" method="post">
	<p>이름 : <input type="text" name ="name"></p>
	<p>주소 : <input type="text" name ="addr"></p>
	<p><input type="submit" value="확인"></p>
	</form>

protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		//get 방식으로 요청이 들어온 경우 실행
		//input 태그에서 입력되어 넘어온 데이터(이름, 주소)를 받아야함
		//모든 요청 데이터는 request 객체에 담아서 넘어옴
		response.setContentType("text/html;charset=utf-8");
		
		String name = request.getParameter("name");
		String addr = request.getParameter("addr");
		
		PrintWriter out = response.getWriter();
		out.println("<html><body>");
		out.println("<h2>" + name + "님은" + addr + "에 사는군요.</h2>");
		out.println("</body></html>");
	ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ
<!-- factorial.jsp -->
	<%!
		//선언부 : 팩토리얼 계산 함수 선언
		
		int factorial(int n){
			int result = 1;
		
			for(int i=n; i>1; i--){
				result *= 1;
			
		}
		return result;
	}
	
	
	%>
	
	<h2> 팩토리얼 계산하기</h2>
	<h3> 5! = <%=factorial(5) %></h3> ㅡㅡ여기 오류터짐 jsp파일
ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ
<%
		int sum = 0;
		for(int i=0; i<=100; i++){
			if(i%2 !=0)
				continue;
			sum+=i;
			
		}
	
	%>
	
	
	
	<!-- 자바 변수 값을 화면에 표현할 때 : 표현식 -->

	<h2> 1부터 100까지의 숫자 중 모든 짝수의 합 = <%= sum %></h2> jsp파일

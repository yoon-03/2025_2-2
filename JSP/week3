infoBasic.jsp

	<%
		String stNum = request.getParameter("stnum");
		String[] subjects = request.getParameterValues("sub")
				int age = Integer.parseInt(request.getParameter("age"));
	
	%>



	<h2>학번 : <%=stNum%></h2>
	<h2>나이 : <%=age %>
	<% 
		if(age >= 20)
			out.println(" (성인)");
			
		else
			out.println("(미성년자)");
	%>
	
	</h2>
	<br>
	
	<h1>선택한 과목 목록</h1>
	<ul>
		<%
		
			if(subjects != null){
				for(String s :subjects)
					out.println("<li>" + s + "</li>");
				
				else
					out.println("<li>선택한 과목이 없습니다.</li>");
		
		%>
	</ul>

